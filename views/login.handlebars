<div class="row justify-space-between-md">
  <div id="box" class="login-card">
    <h3 class="page-title">Login</h3>
    <form class="form login-form">
      <div class="form-group">
        <label for="username-login">Username:</label>
        <input class="form-input" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button id="createB" class="btn btn-primary" type="submit">Login</button>
        <button id="otherB" class="page-switch">Signup</button>
      </div>
    </form>
  </div>
  <div  id="box" class="signup-card hidden">
    <h3 class="page-title">Signup</h3>
    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button id="createB" class="btn btn-primary" type="submit">Signup</button>
        <button id="otherB" class="page-switch">Login</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>